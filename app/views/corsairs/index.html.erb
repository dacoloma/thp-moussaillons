<div class="center jumbotron">
  <h1>Index</h1>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @corsairs.each do |corsair| %>
      <tr>
        <td><%= corsair.first_name %></td>
        <td><%= corsair.age %></td>
        <td><%= button_to 'Show', corsair, :class=>"btn btn-sm btn-info", :method=>:get%></td>
        <td><%= button_to 'Edit', edit_corsair_path(corsair), :class=>"btn btn-sm btn-warning", :method=>:get%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Corsair', new_corsair_path, :class=>"btn btn-primary my-2", :method=>:get%>

</div>
